<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgProductos"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/productos" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvProName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color4"
                android:text="TextView" />

            <TextView
                android:id="@+id/tvProDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color4"
                android:text="TextView" />

            <TextView
                android:id="@+id/tvProPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color4"
                android:text="TextView" />
            <EditText
                android:id="@+id/editTextTextPersonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="" />
            <Button
                android:id="@+id/btnProductos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Productos" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgServicios"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/servicios" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvSerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color4"
                android:text="TextView" />

            <TextView
                android:id="@+id/tvSerDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color4"
                android:text="TextView" />

            <TextView
                android:id="@+id/tvSerPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color4"
                android:text="TextView" />

            <EditText
                android:id="@+id/edtServices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="" />
            <Button
                android:id="@+id/btnServices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Servicios" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgSucursales"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/sucursales" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvSucName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color4"
                android:text="TextView" />

            <TextView
                android:id="@+id/tvSucDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color4"
                android:text="TextView" />

            <TextView
                android:id="@+id/tvSucLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color4"
                android:text="TextView" />

            <EditText
                android:id="@+id/edtSucursales"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="" />
            <Button
                android:id="@+id/btnSucursales"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sucursales" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>